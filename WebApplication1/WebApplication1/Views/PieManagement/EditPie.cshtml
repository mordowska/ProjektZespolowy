@model PieEditViewModel
<h2>Edit pie</h2>
<form asp-controller="PieManagement" asp-action="EditPie" method="post" class="form-horizontal" role="form">
    <h4>Update the pie details below</h4>
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Pie.Id" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.Id" class="form-control" />@*readonly="readonly"*@
            <span asp-validation-for="Pie.Id" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.Name" class="form-control" />
            <span asp-validation-for="Pie.Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.ShortDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.ShortDescription" class="form-control" />
            <span asp-validation-for="Pie.ShortDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.LongDescription" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.LongDescription" class="form-control" />
            <span asp-validation-for="Pie.LongDescription" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.Price" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.Price" class="form-control" />
            <span asp-validation-for="Pie.Price" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.ImageThumbnailUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.ImageThumbnailUrl" class="form-control" />
            <span asp-validation-for="Pie.ImageThumbnailUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.ImageUrl" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.ImageUrl" class="form-control" />
            <span asp-validation-for="Pie.ImageUrl" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.IsInStock" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.IsInStock" class="form-control" />
            <span asp-validation-for="Pie.IsInStock" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pie.IsPieOfWeek" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="Pie.IsPieOfWeek" class="form-control" />
            <span asp-validation-for="Pie.IsPieOfWeek" class="text-danger"></span>
        </div>
    </div>
    
    <div class="form-group">
        <label asp-for="Categories" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="CategoryId" class="form-control"
                    asp-items="Model.Categories"></select>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-primary" value="Update pie" />
        </div>
    </div>
</form>
